<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::marketing">
                    <resource id="Mageplaza_RewardPoints::reward_points">
                        <resource id="Mageplaza_RewardPoints::earning_rate" disabled="true"/>
                        <resource id="Mageplaza_RewardPoints::spending_rate" disabled="true"/>
                        <resource id="Mageplaza_RewardPoints::earning" title="Earning" translate="title" sortOrder="10">
                            <resource id="Mageplaza_RewardPoints::earning_rate_pro" title="Earning Rate" translate="title" sortOrder="10"/>
                            <resource id="Mageplaza_RewardPoints::earning_catalog" title="Catalog Rules" translate="title" sortOrder="20"/>
                            <resource id="Mageplaza_RewardPoints::earning_shopping_cart" title="Shopping Cart Rules" translate="title" sortOrder="30"/>
                        </resource>
                        <resource id="Mageplaza_RewardPoints::spending" title="Spending" translate="title" sortOrder="20">
                            <resource id="Mageplaza_RewardPoints::spending_rate_pro" title="Spending Rate" translate="title" sortOrder="10"/>
                            <resource id="Mageplaza_RewardPoints::spending_shopping_cart" title="Shopping Cart Rules" translate="title" sortOrder="20"/>
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>