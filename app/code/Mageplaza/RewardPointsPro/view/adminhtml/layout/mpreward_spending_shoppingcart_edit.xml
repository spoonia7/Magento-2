                    <argument name="name" xsi:type="string">labels</argument>
                    <argument name="block" xsi:type="string">mp_rewardpro_spending_shopping_cart_tabs_labels</argument>
                </action>
            </block>
        </referenceContainer>
        <referenceContainer name="content">
            <block class="Mageplaza\RewardPointsPro\Block\Adminhtml\Spending\ShoppingCart\Edit" name="spending_shopping_cart"/>
        </referenceContainer>
    </body>
