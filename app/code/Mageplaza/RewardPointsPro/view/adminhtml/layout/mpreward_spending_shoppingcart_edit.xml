    <update handle="editor"/>
    <body>
        <referenceContainer name="left">
            <block class="Mageplaza\RewardPointsPro\Block\Adminhtml\Spending\ShoppingCart\Edit\Tabs" name="mp_rewardpro_spending_shopping_cart_tabs">
                <block class="Mageplaza\RewardPointsPro\Block\Adminhtml\Spending\ShoppingCart\Edit\Tabs\General" name="mp_rewardpro_spending_shopping_cart_tabs_general"/>
                <action method="addTab">
                    <argument name="name" xsi:type="string">general</argument>
                    <argument name="block" xsi:type="string">mp_rewardpro_spending_shopping_cart_tabs_general</argument>
                </action>
                <block class="Mageplaza\RewardPointsPro\Block\Adminhtml\Spending\ShoppingCart\Edit\Tabs\Conditions" name="mp_rewardpro_spending_shopping_cart_tabs_conditions"/>
