<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <rewardpoints>
            <behavior>
                <facebook>
                    <enabled>1</enabled>
                    <pages_display>cms_index_index,catalog_category_view,catalog_product_view</pages_display>
                </facebook>
                <twitter>
                    <enabled>1</enabled>
                    <pages_display>cms_index_index,catalog_category_view,catalog_product_view</pages_display>
                </twitter>
            </behavior>
            <referrals>
                <general>
                    <email>rewardpoints_referrals_general_email</email>
                </general>
                <url_key>
                    <param>2</param>
                </url_key>
            </referrals>
            <milestone>
                <enabled>1</enabled>
                <source>0,1,2,3</source>
                <email>0</email>
                <background_color>#E9ECEF</background_color>
                <range_color>#16A8B4</range_color>
                <type>1</type>
            </milestone>
        </rewardpoints>
    </default>
</config>
