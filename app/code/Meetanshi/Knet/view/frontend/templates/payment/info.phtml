                        <tr>
                            <th scope="row"><?= $block->getLabel($label) ?></th>
                            <td>
                                <?= /* @noEscape */ nl2br($block->escapeHtml(implode("\n", $block->getValueAsArray($value, true)))) ?>
                            </td>
                        </tr>
                    <?php endif; ?>
                <?php endforeach; ?>
            </table>
        </dd>
    <?php endif;?>
